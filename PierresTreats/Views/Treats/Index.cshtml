@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Treat>;

<h1 class ="jumbotron">Treats</h1>

<div class="container-fluid">
  @if (@Model.Count == 0)
  {
    <h3>No Treats have been added yet!</h3>
  } 

  @foreach (Treat treat in Model)
  {
    @Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })<br>
  }


  @Html.ActionLink("Add new treat", "Create")<br>
  @Html.ActionLink("Home", "Index", "Home")<br>
</div>