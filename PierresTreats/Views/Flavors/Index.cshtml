@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<h1>Flavors</h1>

@if (!@Model.Any())
{
  <h3>No Flavors have been added yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  @Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })<br>
}


@Html.ActionLink("Add new Flavor", "Create")<br>
@Html.ActionLink("Home", "Index", "Home")<br>