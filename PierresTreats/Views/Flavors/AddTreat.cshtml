@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2 class="jumbotron">Add a Treat</h2>

<div class="container-fluid">
  <h4>Add a Treat with this flavor: @Html.DisplayFor(model => model.Name)</h4>

  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.FlavorId)

      @Html.Label("Select Treat")
      @Html.DropDownList("TreatId")

      <input type="submit" value="Save" />
  }

  <p>@Html.ActionLink("Back to list", "Index")</p>
</div>